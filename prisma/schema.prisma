generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户
model User {
  id       Int     @id @default(autoincrement())
  username String
  email    String? @unique()
  password String
  token    String?

  role       Role     @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // 上传的音乐
  songs Song[]
}

enum Role {
  ADMIN
  USER
}

// 音频列表
model Playlist {
  id          Int            @id @default(autoincrement())
  title       String
  description String         @db.LongText
  // 是否是红心歌单
  is_like     PlaylistType   @default(NORMAL)
  songs       PlaylistSong[]
}

// 歌单类型
enum PlaylistType {
  NORMAL
  LIKE
}

model Song {
  id          Int    @id @default(autoincrement())
  // 歌曲的名称
  title       String
  album       String
  // 作家
  artists     String
  //   url
  metaUrl     String
  uploader_id Int?
  user        User?  @relation(fields: [uploader_id], references: [id], onDelete: SetNull)

  //   多对多
  playlist PlaylistSong[]
}

// 中间表，表示歌单与歌曲之间的连接
model PlaylistSong {
  id          Int      @id @default(autoincrement())
  playlist_id Int
  playlist    Playlist @relation(fields: [playlist_id], references: [id], onDelete: Cascade)
  song_id     Int
  song        Song     @relation(fields: [song_id], references: [id], onDelete: Cascade)

  // 表示添加时间
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
